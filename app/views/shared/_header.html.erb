<div class="sticky top-0 z-40 w-full backdrop-blur flex-none transition-colors border-b border-slate-900/10 duration-500 shadow-md bg-zinc-50">
  <div class="max-w-7xl mx-auto">
    <header class="py-4 mx-4">
      <div class="relative flex items-center">
        <%= link_to image_tag("logo_header.png", size: "64"), root_path %>
        <span class="text-slate-900 dark:text-white w-auto h-5">Reviewers Management System</span>

        <nav class="lg:flex justify-center space-x-4 ml-auto">
          <% if current_user %>
            <%= link_to "Home", root_path, class: "font-bol px-3 py-2 text-stone-700 rounded-lg hover:bg-stone-200 hover:text-stone-900" %>
            <%= link_to "Profile", profile_path, class: "font-bol px-3 py-2 text-stone-700 rounded-lg hover:bg-stone-200 hover:text-stone-900"  %>
            <%= link_to "Log out", signout_path, class: "font-bol px-3 py-2 text-stone-700 rounded-lg hover:bg-stone-200 hover:text-stone-900"  %>
          <% end %>
        </nav>
      </div>
    </header>
  </div>
</div>
